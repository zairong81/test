package login.service.face;

import login.dto.Login;

public interface LoginService {

	/**
	 * 회원가입
	 * 
	 * @param login - 회원가입 정보
	 */
	public void join(Login login);
	
	/**
	 * 로그인 처리
	 * 
	 * @param login - 로그인 아이디, 패스워드 정보 객체
	 * @return
	 * 		true - 로그인 인증 성공
	 * 		false -로그인 인증 실패
	 */
	public boolean login(Login login);
	
	/**
	 * 회원 상세정보
	 * 
	 * @param id - 로그인 아이디
	 * @return Login - 회원 정보
	 */
	public Login info(String id);
	
}











